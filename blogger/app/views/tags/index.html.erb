<h1>All Tags</h1>

<ul id="articles">
	<% @tags.each do |tag| %>
		<li>
			<%= link_to tag.name, tag_path(tag) %> <%= link_to "Delete", tag_path(tag), method: :delete, data: {confirm: "Are you sure you want to delete the tag?"} %>
		</li>
	<% end %>
</ul>

<br>
<%= link_to "<< Back to Articles List", articles_path %>

<%= link_to "Create a New Article", new_article_path, class: 'new_article' %>